@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Customer>;

<h1>Customers</h1>

@if (@Model.Count == 0)
{
  <h3>No Customers have been added yet!</h3>
} 
<hr>
<ul>
@foreach (Customer customer in Model)
{
  <li>@Html.ActionLink($"{customer.Description}", "Details", new { id = customer.CustomerId }) | @customer.Stylist.Name</li>
}
</ul>
<p>@Html.ActionLink("Add new Customer", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>